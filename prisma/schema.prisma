// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id                 String               @id @default(uuid()) @db.VarChar(36)
  username           String               @unique
  email              String               @unique
  password           String
  resetPasswordToken String?              @db.VarChar(255)
  createdAt          DateTime             @default(now()) @db.Timestamp(3)
  updatedAt          DateTime             @default(now()) @db.Timestamp(3)
  tokens             UsersAccessTokens[]
  refreshTokens      UsersRefreshTokens[]

  @@map("users")
}

model UsersAccessTokens {
  id              String   @id @default(uuid()) @db.VarChar(36)
  user            Users    @relation(fields: [user_id], references: [id])
  user_id         String
  access_token    String   @unique @db.VarChar(255)
  createdAt       DateTime @default(now()) @db.Timestamp(3)
  expiration_date DateTime
  revoked         Boolean  @default(false)
  updatedAt       DateTime @default(now()) @db.Timestamp(3)

  @@map("users_access_tokens")
}

model UsersRefreshTokens {
  id              String   @id @default(uuid()) @db.VarChar(36)
  user            Users    @relation(fields: [user_id], references: [id])
  user_id         String
  refresh_token   String   @unique @db.VarChar(255)
  createdAt       DateTime @default(now()) @db.Timestamp(3)
  expiration_date DateTime
  revoked         Boolean  @default(false)
  updatedAt       DateTime @default(now()) @db.Timestamp(3)

  @@map("users_refresh_tokens")
}

model Categories {
  id                   String   @id @default(uuid()) @db.VarChar(36)
  category_name        String   @unique
  category_description String   @db.VarChar(255)
  category_discount    Decimal? @default(0) @db.Decimal(5, 2)
  createdAt            DateTime @default(now()) @db.Timestamp(3)
  updatedAt            DateTime @default(now()) @db.Timestamp(3)

  @@map("categories")
}
